<% if @recipe.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @recipe.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section main-image" style="margin-bottom: 66px">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6" style="padding: 0.75rem">
        <%= form_for @recipe do |f| %>
          <div class="field">
            <%= f.label :title, "レシピ名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "作り方", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <div class="has-text-centered">
            <%= f.attachment_field :image, class: "input" %>
            </div>
          </div>

          <%= f.submit '投稿', class: "button is-success input mt-6" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
